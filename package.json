{
  "name": "sai-math-figure-generator",
  "version": "1.0.0",
  "description": "DSE Math Figure Generator - Electron + Python (Matplotlib/TikZ)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.saihk.math-figure-generator",
    "productName": "SAi Math Figure Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "python-backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "python-backend",
        "to": "python-backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5"
  }
}
